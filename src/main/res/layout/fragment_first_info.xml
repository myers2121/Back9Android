<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.astral.back9.FirstInfoFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="64dp"
        android:layout_centerHorizontal="true"
        >

        <ImageView
            android:id="@+id/first_fragment_image"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="48dp"/>

        <TextView
            android:id="@+id/first_fragment_title"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="BACK9"
            android:textSize="25sp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:layout_below="@+id/first_fragment_image"
            />

        <TextView
            android:id="@+id/first_fragment_description"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Bringing the social aspect of golf to smart phones around the world."
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_below="@+id/first_fragment_title"
            />


        <ImageView
            android:id="@+id/circles"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/getStartedButton"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="48dp"
            android:layout_below="@+id/first_fragment_description"/>

    </RelativeLayout>

</RelativeLayout>
